      .form-group.col-md-4
        = form.label :final_point
        = form.text_field :final_point, class: 'form-control', required: 'required', value: "Palacio de Justicia, Lima, Peru"
      .form-group.col-md-4
        = form.label :distance_in_between
        = form.text_field :distance_in_between, class: 'form-control', disabled: true

    .form-row.clear
      .form-group.col-md-6
        = form.submit "Guardar", class: "btn btn-primary btn-block btn-md"
